{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "esnext",
      "DOM"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src"
  ]
}